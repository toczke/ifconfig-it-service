{
  "name": "it-service-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "lerna run dev --parallel",
    "build": "lerna run build",
    "start": "lerna run start",
    "stop": "lerna run stop",
    "clean": "lerna clean",
    "install:all": "npm install",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "frontend:dev": "cd packages/frontend && npm run dev",
    "bot:dev": "cd packages/bot && npm run dev"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "lerna": "^8.2.1"
  }
}
